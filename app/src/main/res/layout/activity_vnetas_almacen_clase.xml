<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VnetasAlmacenClase">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20px"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VENTAS NETAS POR ALMACEN DESGLOSADAS POR CLASE DE PRODUCTO" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESDE "
            android:layout_marginTop="20px"
            />

        <EditText
            android:id="@+id/txtFechaIni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView11"
            android:layout_marginTop="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HASTA" />

        <EditText
            android:id="@+id/txtFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView13"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALMACEN" />

        <Spinner
            android:id="@+id/spinnerAlmacen"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20px" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLASE DE PRODUCTO" />

        <Spinner
            android:id="@+id/spinnerClasesProd"
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <Button
            android:id="@+id/btnConsultaRepoClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@color/colorPrimary"
            android:text="CONSULTAR REPORTE"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>